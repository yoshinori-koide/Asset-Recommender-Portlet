<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.0.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_0_0.dtd">

<liferay-portlet-app>
	<portlet>
		<portlet-name>asset-recommender-portlet</portlet-name>
		<icon>/icon.png</icon>
		<configuration-action-class>jp.co.projapan.portlet.assetrecommender.action.ConfigurationActionImpl</configuration-action-class>
		<scheduler-entry>
			<scheduler-description>CSV Crawler</scheduler-description>
			<scheduler-event-listener-class>jp.yoshinori.koide.portlet.assetrecommender.util.CSVCrawlerMessageListener</scheduler-event-listener-class>
			<trigger>
				<simple>
					<simple-trigger-value>3</simple-trigger-value>
					<time-unit>minute</time-unit>
				</simple>
			</trigger>
		</scheduler-entry>
		<instanceable>true</instanceable>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>/js/main.js</footer-portlet-javascript>
		<css-class-wrapper>rating-recommender-portlet-portlet</css-class-wrapper>
	</portlet>
	<role-mapper>
		<role-name>administrator</role-name>
		<role-link>Administrator</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>guest</role-name>
		<role-link>Guest</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>power-user</role-name>
		<role-link>Power User</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>user</role-name>
		<role-link>User</role-link>
	</role-mapper>
</liferay-portlet-app>