<?xml version="1.0"?>

<portlet-app
	version="2.0"
	xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
>
	<portlet>
		<portlet-name>asset-recommender-portlet</portlet-name>
		<display-name>Asset Recommender</display-name>
		<portlet-class>jp.co.projapan.portlet.assetrecommender.AssetRecommenderPortlet</portlet-class>
		<init-param>
			<name>view-jsp</name>
			<value>/view.jsp</value>
		</init-param>
		<init-param>
			<name>edit-jsp</name>
			<value>/edit.jsp</value>
		</init-param>
		<init-param>
			<name>csv-base</name>
			<value>/WEB-INF/csv</value>
		</init-param>
		<init-param>
			<name>deafault-class-name</name>
			<value>com.liferay.portlet.blogs.model.BlogsEntry</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		<resource-bundle>content/Language</resource-bundle>
		<portlet-info>
			<title>Asset Recommender</title>
			<short-title>Asset Recommender</short-title>
			<keywords>Asset Recommender</keywords>
		</portlet-info>
		<portlet-preferences>
			<preference>
				<name>class-name-ids</name>
				<value>10068</value>
			</preference>
			<preference>
				<name>recommend-size</name>
				<value>3</value>
			</preference>
		</portlet-preferences>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
</portlet-app>